---
// components
import Link from "./Link.astro";

// data import
import navData from "../data/navData";

const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1);
---

<nav class="h-20 flex items-center justify-between">
  <h1 class="font-medium text-3xl text-red-500 font-brand">
    <a href="/">lnxBytes</a>
  </h1>
  <ul class="flex items-center gap-3 md:gap-5 text-md font-bold text-zinc-500">
    {
      navData.map((nav) => (
        // <li><a href={nav.link} class={`${currentPath === nav.link && "text-zinc-800 font-extrabold"} hover:text-zinc-600`}>{nav.name}</a></li>
        <Link
          to={nav.link}
          text={nav.name}
          style="primary"
          isFilled={false}
          classes={`${
            `/${currentPath}` === nav.link && "text-zinc-800 font-extrabold"
          } hover:text-zinc-700`}
        />
      ))
    }
  </ul>
</nav>
