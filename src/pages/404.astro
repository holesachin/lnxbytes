---
import Layout from "../layouts/Layout.astro";
const pathname = new URL(Astro.request.url).pathname;
---

<Layout title="404 : page not fount">
  <div class="grid justify-items-center items-center gap-3 h-[80vh]">
    <!-- <img src="/images/brokenLink.svg" class="" alt="" /> -->
    <div class="text-center space-y-5">
      <h1 class="font-brand text-4xl text-zinc-600">oops! it's broken</h1>
      <h1 class="text-9xl text-red-600 font-brand">404</h1>
      <h2 class="font-brand text-8xl">Not Found</h2>
      <h3 class="font-bold text-red-500 text-xl">{pathname}</h3>
      <div class="py-10">
        <a href="/" class="bg-green-600 py-3 px-11 text-white text-lg font-brand rounded-full">GO Back</a>
      </div>
    </div>
  </div>
</Layout>
